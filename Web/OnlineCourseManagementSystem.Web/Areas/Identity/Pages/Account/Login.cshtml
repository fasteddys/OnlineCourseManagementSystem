<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/login-form-resource/images/img-01.png" alt="IMG">
            </div>

            <form id="account" method="post" class="login100-form">
                <span class="login100-form-title">
                    Member Login
                </span>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="wrap-input100">
                    <input class="input100" asp-for="Input.UserName" placeholder="UserName" />
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100">
                    <input asp-for="Input.Password" class="input100" type="password" placeholder="Password">
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>


                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Login
                    </button>
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        Forgot
                    </span>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="txt2">
                        Username / Password?
                    </a>
                </div>
                <div class="text-center p-t-12">
                    <span class="txt1">
                        Resend
                    </span>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                        email confirmation
                    </a>

                </div>

                <div class="text-center p-t-136">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="txt2">
                        Create your Account
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
