@model OnlineCourseManagementSystem.Web.ViewModels.Students.AllStudentsListViewModel
@{
    this.ViewData["Title"] = "Manage Students";
}

<h3>@this.ViewData["Title"]</h3>
<a class="btn btn-success" asp-area="Administration" asp-controller="Students" asp-action="AddParent" >Add/Edit Parent To Student</a>
<table class="table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Date Created</th>
            <th>Title</th>
            <th>Name</th>
            <th>UserName</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Address</th>
            <th>Parent Guardian</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody class="table-light">
        @foreach (var user in this.Model.Students)
        {
            <tr>
                <td>@user.UserCreatedOn.ToString("dddd, dd MMMM yyyy")</td>
                <td>@user.UserTitle</td>
                <td>@(user.UserFirstName + ' ' + user.UserLastName)</td>
                <td>@user.UserUserName</td>
                <td>@user.UserEmail</td>
                <td>@user.UserPhoneNumber</td>
                <td>@user.UserAddress</td>
                <td>@(user.ParentUserFirstName + ' ' + user.ParentUserLastName)</td>
                <td><a href="#"><p class="alert-warning">Edit</p></a><a href="#"><p class="alert-danger">Delete</p></a></td>
            </tr>
        }
    </tbody>
</table>