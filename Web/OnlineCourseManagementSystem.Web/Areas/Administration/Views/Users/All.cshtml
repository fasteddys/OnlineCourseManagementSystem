@model OnlineCourseManagementSystem.Web.ViewModels.Users.AllUsersListViewModel
@{
    this.ViewData["Title"] = "Manage Users";
}

<h3>@this.ViewData["Title"]</h3>
<table class="table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Date Created</th>
            <th>Title</th>
            <th>Name</th>
            <th>UserName</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody class="table-light">
        @foreach (var user in this.Model.Users)
        {
            <tr>
                <td>@user.CreatedOn.ToString("dddd, dd MMMM yyyy")</td>
                <td>@user.Title</td>
                <td>@(user.FirstName + ' ' + user.LastName)</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td><a href="#"><p class="alert-warning">Edit</p></a><a href="#"><p class="alert-danger">Delete</p></a></td>
            </tr>
        }
    </tbody>
</table>