@using OnlineCourseManagementSystem.Web.ViewModels.Events
@model EventInfoViewModel
@{
    this.ViewData["Title"] = "Event info";
}

<h1 class="title" style="color: #ff6a00;background:#ffffff">@this.Model.Theme</h1>
<div class="row rounded my-4" style="background:#919090">
    <div class="col-md-3 d-flex flex-column justify-content-center align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-calendar-date" viewBox="0 0 16 16">
                <path d="M6.445 11.688V6.354h-.633A12.6 12.6 0 0 0 4.5 7.16v.695c.375-.257.969-.62 1.258-.777h.012v4.61h.675zm1.188-1.305c.047.64.594 1.406 1.703 1.406 1.258 0 2-1.066 2-2.871 0-1.934-.781-2.668-1.953-2.668-.926 0-1.797.672-1.797 1.809 0 1.16.824 1.77 1.676 1.77.746 0 1.23-.376 1.383-.79h.027c-.004 1.316-.461 2.164-1.305 2.164-.664 0-1.008-.45-1.05-.82h-.684zm2.953-2.317c0 .696-.559 1.18-1.184 1.18-.601 0-1.144-.383-1.144-1.2 0-.823.582-1.21 1.168-1.21.633 0 1.16.398 1.16 1.23z" />
                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
            </svg>
            <div> @this.Model.StartDate.ToString("dd MMM yyyy(ddd)")</div>
    </div>
    <div class="col-md-3 d-flex flex-column justify-content-center align-items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
            <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
        </svg>
        <div>
            @this.Model.StartDate.ToString("t") - @this.Model.EndDate.ToString("t")
        </div>
    </div>
    <div class="col-md-3 d-flex flex-column justify-content-center align-items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
        </svg>
        <div class="text-center">@this.Model.Address</div>
    </div>
    <div class="col-md-3 d-flex flex-column justify-content-center align-items-center">
        <svg style="color:black" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <div>
            @this.Model.CreatorName
        </div>
    </div>
</div>

<div class="rounded" style="background:#ffffff">
    <p class="text-center">
        @this.Model.Description
    </p>

    <div class="row">
        <div class="col-md-6">
            <h3 class="text-center">Resources</h3>
            @foreach (var file in this.Model.Files)
            {
                <p>
                    @if (file.RemoteUrl.EndsWith(".jpg"))
                    {
                        <div class="pt-1">
                            <iframe src=@file.RemoteUrl height="300" width="300"></iframe>
                        </div>
                    }
                    else
                    {
                        <div class="pt-1">
                            <iframe src='https://view.officeapps.live.com/op/embed.aspx?src=@file.RemoteUrl' height="300" width="300"></iframe>
                        </div>
                    }
                </p>
            }
        </div>
        <div class="col-md-6">
            <h3 class="text-center">Information about the lecture</h3>
            <span>
                <span>
                    <img class="rounded-circle" style="width:200px;height:200px" src="https://softuni.bg/Files/Seminars/VladimirTasev.jpg" />
                </span>
                <span>
                    @this.Model.CreatorName
                </span>
                <span>@this.Model.CreatorDescription</span>
            </span>
        </div>
    </div>
</div>


