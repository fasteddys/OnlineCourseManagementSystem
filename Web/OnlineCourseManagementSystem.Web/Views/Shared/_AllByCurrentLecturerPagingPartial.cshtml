@model OnlineCourseManagementSystem.Web.ViewModels.Paging.PagingViewModel
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" asp-controller="Courses" asp-action="AllByCurrentLecturer" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 4; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-controller="Courses" asp-action="AllByCurrentLecturer" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only">(current)</span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 4; i++)
        {
            if (i <= Model.LecturersCount)
            {
                <li class="page-item"><a class="page-link" asp-controller="Courses" asp-action="AllByCurrentLecturer" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if (!Model.HasNextPageLecturers) { <text>disabled</text> }">
            <a class="page-link" asp-controller="Courses" asp-action="AllByCurrentLecturer" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>