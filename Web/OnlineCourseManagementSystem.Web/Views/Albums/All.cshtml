@using OnlineCourseManagementSystem.Web.ViewModels.Albums
@model AllAlbumsViewModel
@{
    this.ViewData["Title"] = "Album";
}

<div class="album-container">
    <h1 class="title">Gallery</h1>
    @if (this.TempData.ContainsKey("AlbumExist"))
    {
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            @this.TempData["AlbumExist"]
        </div>
    }

    <div style="display: flex; flex-direction: row; margin-bottom: 1rem;">
        <h3>Add Album</h3>
        <button class="btn" id="btn-form-album" onclick="openAlbumForm()" style="background-color: azure ;margin-left: 10px; ">
            <img src="~/icons/square_add.png" style="max-width: 30px; max-height: 30px" alt="Alternate Text" />
        </button>
    </div>
    

    <div class="row">
        @foreach (var album in this.Model.Albums)
        {
            <a class="text-center folder-container col-md-2" style="color: black;" asp-controller="Files" asp-action="AllImages" asp-route-id="@album.AlbumId">
                <img src="~/icons/folder_ok.png" alt="Folder" />
                @album.Name
            </a>
        }
    </div>

</div>


<div id="modal-content">
     <button id="btn-close" onclick="closeAlbumForm()">
         Close
     </button>

    <h1 class="text-center">Add Album</h1>
        <p class="text-success" style="background: #e7e7e7; display: flex; border-radius: 5px">Here using the button add,you can create album and add it to your gallery</p>
    <form asp-controller="Albums" asp-action="CreateAlbum" method="post" class="form-album-container">
        <div>
            <label class="h3" style="color: black" asp-for="InputModel.Name"></label>
            <input asp-for="InputModel.Name" />
            <span asp-validation-for="InputModel.Name" class="alert-danger"></span>
        </div>
        <div>
            <button class="btn" id="btn-form-album" >
                <img src="~/icons/square_add.png" style="max-width: 30px; max-height: 30px" alt="Alternate Text" />
            </button>
        </div>
    </form>
</div>

