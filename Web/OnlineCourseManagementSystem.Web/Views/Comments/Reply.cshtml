@using OnlineCourseManagementSystem.Web.ViewModels.Comments
@model ReplyToCommentInputModel
@{
    this.TempData["Title"] = "Reply";
}

<h1 class="title">Reply</h1>
<form asp-controller="Comments" asp-action="Reply" method="post">
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" placeholder="Enter the comment" class="form-control"></textarea>
        <span class="alert-danger" asp-validation-for="Content"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-info">Reply</button>
    </div>
</form>
