@using OnlineCourseManagementSystem.Web.ViewModels.Comments
@model EditCommentInputModel
@{
    this.TempData["Title"] = "Edit Comment";
}

<h1 class="title">Edit Comment</h1>
<form asp-controller="Comments" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" placeholder="Enter the comment" class="form-control"></textarea>
        <span class="alert-danger" asp-validation-for="Content"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-info">Edit Comment</button>
    </div>
</form>
