@model OnlineCourseManagementSystem.Web.ViewModels.Lectures.AddFileToLectureInputModel
@{
    this.ViewData["Title"] = "Add Resource";
}

<h3>@this.ViewData["Title"]</h3>
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="form-group">
        <label asp-for="File"></label>
        <input asp-for="File" class="form-control" />
        <span asp-validation-for="File" class="alert-danger"></span>
    </div>

    <input type="submit" value="Submit" class="btn btn-success" />
</form>