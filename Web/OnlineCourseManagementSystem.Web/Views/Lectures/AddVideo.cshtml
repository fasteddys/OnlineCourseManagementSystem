@model OnlineCourseManagementSystem.Web.ViewModels.Lectures.AddVideoToLectureInputModel
@{ 
    this.ViewData["Title"] = "Add Video to the Lecture!";
}

<h3>@this.ViewData["Title"]</h3>
<form method="post">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="form-group">
        <label asp-for="RemoteUrl"></label>
        <input asp-for="RemoteUrl" class="form-control" />
        <span asp-validation-for="RemoteUrl" class="alert-danger"></span>
    </div>

    <input type="submit" value="submit" class="btn btn-success" />
</form>