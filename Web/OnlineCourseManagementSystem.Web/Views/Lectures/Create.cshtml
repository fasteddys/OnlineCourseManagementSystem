@model OnlineCourseManagementSystem.Web.ViewModels.Lectures.CreateLectureInputModel
@{ 
    this.ViewData["Title"] = "Create a Lecture";
}

<h3>@this.ViewData["Title"]</h3>
<form method="post">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseId"></label>
        <input asp-for="CourseId" class="form-control" />
        <span asp-validation-for="CourseId" class="alert-danger"></span>
    </div>

    <input type="submit" value="Submit" class="btn btn-primary" />
</form>