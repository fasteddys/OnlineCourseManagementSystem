@model OnlineCourseManagementSystem.Web.ViewModels.Absences.GetAllByStudentInIntervalInputModel
@{ 
    this.ViewData["Title"] = "Choose the parameters to see your ward/s attendance";
} 

<h3>@this.ViewData["Title"]</h3>
<form method="post">

    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="form-group">
        <label asp-for="StudentId"></label>
        <select asp-for="StudentId" asp-items="@this.Model.StudentItems" class="form-control">
            <option>Select a student ...</option>
        </select>
        <span asp-validation-for="StudentId" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select asp-for="CourseId" asp-items="@this.Model.CourseItems" class="form-control">
            <option>Select a course ...</option>
        </select>
        <span asp-validation-for="CourseId" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="alert-danger"></span>
    </div>

    <input type="submit" value="View Attendance" class="btn btn-success" />
</form>