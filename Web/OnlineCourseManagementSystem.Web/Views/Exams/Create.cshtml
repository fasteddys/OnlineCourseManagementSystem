@model OnlineCourseManagementSystem.Web.ViewModels.Exams.CreateExamInputModel
@{ 
    this.ViewData["Title"] = "Create Exam";
}

<h3>@this.ViewData["Title"]</h3>
<form method="post">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select asp-for="CourseId" asp-items="@this.Model.CourseItems" class="form-control">
            <option>Select Course ...</option>
        </select>
        <span asp-validation-for="CourseId" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" value="@DateTime.UtcNow" class="form-control" />
        <span asp-validation-for="StartDate" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="alert-danger"></span>
    </div>

    <input type="submit" value="Submit" class="btn btn-success" />
</form>