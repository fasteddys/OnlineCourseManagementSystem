@using OnlineCourseManagementSystem.Web.ViewModels.Assignments
@model CreateAssignmentInputModel
@{
    this.ViewData["Title"] = "Create Assignment";
}

<h1 class="title" style="color: #ff6a00;background:#ffffff">Create Assignment</h1>

<pre class="tab"></pre>
<pre class="tab"></pre>

<form asp-controller="Assignments" asp-action="CreateAssignment" enctype="multipart/form-data" method="post">

    <div asp-validation-summary="All" class="alert-danger"></div>

    <div>
        <label asp-for="Title"></label>
        <textarea asp-for="Title" class="form-control"></textarea>
        <span asp-validation-for="Title" class="alert-danger"></span>
    </div>

    <div>
        <label asp-for="Instructions"></label>
        <textarea asp-for="Instructions" class="form-control"></textarea>
        <span asp-validation-for="Instructions" class="alert-danger"></span>
    </div>
    <pre class="tab"></pre>
    <pre class="tab"></pre>
    <div>
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="alert-danger"></span>
    </div>
    <pre class="tab"></pre>
    <pre class="tab"></pre>
    <div>
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="alert-danger"></span>
    </div>
    <pre class="tab"></pre>
    <pre class="tab"></pre>
    <div>
        <label asp-for="PossiblePoints"> </label>
        <input asp-for="PossiblePoints" class="form-control" />
    </div>
    <pre class="tab"></pre>
    <pre class="tab"></pre>
    <div>
        <label asp-for="Files"></label>
        <input type="file" asp-for="Files" multiple class="form-control-file">
    </div>
    <pre class="tab"></pre>
    <pre class="tab"></pre>
    <div>
        <label asp-for="StudentsId"></label>
        <select asp-items="@this.Model.Students" multiple="multiple" class="multi-select form-control custom-radio" id="StudentsId" asp-for="StudentsId">
        </select>
        <span asp-validation-for="StudentsId"></span>
    </div>
    <pre class="tab"></pre>
    <pre class="tab"></pre>
    <div>
        <button class="btn btn-info form-control">Create Assignment</button>
    </div>
</form>