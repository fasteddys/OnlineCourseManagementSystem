@using OnlineCourseManagementSystem.Web.ViewModels.Files
@model AllImagesViewModel

<h1 class="card-title">
    Album: @Model.AlbumName
</h1>

<div>
    @await Html.PartialAsync("_PartialAddImages", new UploadImageInputModel { AlbumId = Model.AlbumId })
</div>

<pre class="tab"></pre>
<pre class="tab"></pre>

<div class="row">
    @foreach (var image in this.Model.Images)
    {
        <div class="card col-md-4" style="height: 340px; width: 50px; background: #e9e6e6">
            <img style="height: 263px; width: 268px" src="@image.ImageUrl" alt="Image" class="rounded" />
            <div class="card-body">
                <div class="row">
                    
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <form asp-controller="Files" asp-action="DeleteImage" asp-route-id="@image.ImageId" method="post">
                            <button class="btn  btn-info">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <pre class="tab"></pre>

    }
</div>