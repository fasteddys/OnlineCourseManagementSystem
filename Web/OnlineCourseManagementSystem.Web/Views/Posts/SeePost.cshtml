@using OnlineCourseManagementSystem.Web.ViewModels.Posts
@model PostInfoViewModel
@{
    this.ViewData["Title"] = "Post";
    int i = 0;
}

@if (this.TempData.ContainsKey("CreatedComment"))
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @this.TempData["CreatedComment"]
    </div>
}

<article class="rounded mt-5" style=" background: #d8d8d8">
    <div class="card-header">
        <span>@this.Model.Post.AuthorName</span>

        <h1>@this.Model.Post.Title</h1>

    </div>
    <div class="card-body">
        <p>@this.Model.Post.Content</p>
    </div>
    <div class="card-footer">
        <p>
            <svg class="my-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
            </svg>
            <span class="badge text-black-50 mx-1">@this.Model.Post.Likes.Count()</span>

            <svg class="my-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                <path d="M18 9.5a1.5 1.5 0 11-3 0v-6a1.5 1.5 0 013 0v6zM14 9.667v-5.43a2 2 0 00-1.105-1.79l-.05-.025A4 4 0 0011.055 2H5.64a2 2 0 00-1.962 1.608l-1.2 6A2 2 0 004.44 12H8v4a2 2 0 002 2 1 1 0 001-1v-.667a4 4 0 01.8-2.4l1.4-1.866a4 4 0 00.8-2.4z" />
            </svg>
            <span class="badge text-black-50 mx-1">@this.Model.Post.Dislikes.Count()</span>
        </p>
        <p>
            <img src="~/icons/calendar.png" alt="Alternate Text" />
            <span>@this.Model.Post.CreatedOn</span>
        </p>
        @if (!this.User.Identity.IsAuthenticated)
        {
            <p>
                To have permission to the forum(adding questions, responding or comment) you have to be signed in course of onlineManagmentSystem.bg
            </p>
        }
    </div>
</article>

@if (this.User.Identity.IsAuthenticated)
{
    <div class="d-flex justify-content-end">
        <a class="btn mt-3" style="background: #ff6a00; color:#ffffff; width: auto" asp-controller="Comments" asp-action="Create" asp-route-id="@this.Model.Post.Id">
            Add Comment
        </a>
    </div>
}


    <div class="justify-content-lg-end mt-1">
        @if (!(this.Model.Comments is null))
        {
            @foreach (var comment in this.Model.Comments)
            {
                <div class="card">
                    <div class="card-header d-flex">
                        <div class="flex-grow-1">
                            <span>@comment.AuthorName</span>
                            @if (comment.ModifiedOn != null)
                            {
                                <span>(editted)</span>
                            }
                        </div>
                        <div class="d-flex">
                            @if (comment.AuthorName == this.User.Identity.Name)
                            {
                                <form class="mx-1" asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.Id" method="post">
                                    <button class="btn border-0" style="background:#ff0000;color:#ffffff">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                        </svg>
                                    </button>
                                </form>
                                <a class="btn btn-info mx-1" asp-controller="Comments" asp-action="Edit" asp-route-id="@comment.Id">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                                        <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <p>@comment.Content</p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex align-items-center">
                            <form class="mx-1" asp-controller="Comments" asp-action="Like" asp-route-id="@comment.Id" method="post">
                                @if (!this.User.Identity.IsAuthenticated)
                                {
                                    <button type="button" class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" data-bs-content="You need to be authenticated to rate this.">
                                        <i class="fa fa-thumbs-up" style="font-size: 30px;"></i>
                                    </button>
                                }
                                else
                                {
                                    if (comment.Likes.Any(l => l.UserId == this.User.Identity.Name))
                                    {
                                        <button id="likebtn" class="btn btn-secondary my-1" style="background:#137cdc">
                                            <i class="fa fa-thumbs-up" style="font-size: 30px;"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button id="likebtn" class="btn btn-secondary my-1">
                                            <i class="fa fa-thumbs-up" style="font-size: 30px;"></i>
                                        </button>
                                    }

                                }

                                <span class="badge text-black-50">@comment.Likes.Count()</span>
                            </form>
                            <form class="mx-1" asp-controller="Comments" asp-action="Dislike" asp-route-id="@comment.Id" method="post">
                                @if (!this.User.Identity.IsAuthenticated)
                                {
                                    <button type="button" class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" data-bs-content="You need to be authenticated to rate this.">
                                        <i class="fa fa-thumbs-down" style="font-size: 30px;"></i>
                                    </button>
                                }
                                else
                                {
                                    if (comment.Dislikes.Any(d => d.UserId == this.User.Identity.Name))
                                    {
                                        <button id="dislikebtn" class="btn btn-secondary" style="background:#137cdc">
                                            <i class="fa fa-thumbs-down" style="font-size: 30px;"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button id="dislikebtn" class="btn btn-secondary">
                                            <i class="fa fa-thumbs-down" style="font-size: 30px;"></i>
                                        </button>
                                    }

                                }
                                <span class="badge text-black-50">@comment.Dislikes.Count()</span>
                            </form>
                        </div>
                        <p>
                            <svg xmlns="http://www.w3.org/2000/svg" height="30" width="30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            @if (comment.ModifiedOn == null)
                            {
                                <span class="badge text-black-50">@comment.CreatedOn</span>
                            }
                            else
                            {
                                <span class="badge text-black-50">@comment.ModifiedOn</span>
                            }
                        </p>
                        @{
                            string targetCollapse = $"allreplies{i++}";
                        }
                        <div class="d-flex">
                           <a asp-controller="Comments" asp-action="Reply" class="btn mx-1" style="background:#2847c0;color:aliceblue" asp-route-id="@comment.Id">
                               Reply
                           </a>
                           <button type="button" class="btn btn-info mx-1" data-bs-toggle="collapse" data-bs-target="#@targetCollapse">Replies</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="collapse" id="@targetCollapse">
                            <div class="card card-body bg-dark">
                                @foreach (var reply in comment.Replies)
                                {
                                    <div class="container mb-1" style="background:#ffffff">
                                        <article class="rounded" style="background: #d8d8d8">
                                            <div class="card-header">
                                                <span>@reply.AuthorName</span>
                                                @if (reply.ModifiedOn != null)
                                                {
                                                    <span>(editted)</span>
                                                }
                                            </div>
                                            <div class="card-body">
                                                <p>@reply.Content</p>
                                            </div>
                                            <div class="card-footer">
                                                <form asp-controller="Comments" asp-action="Like" asp-route-id="@reply.Id" method="post">
                                                    @if (!this.User.Identity.IsAuthenticated)
                                                    {
                                                        <button type="button" class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" data-bs-content="You need to be authenticated to rate this.">
                                                            <i class="fa fa-thumbs-up" style="font-size: 30px;"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        if (reply.Likes.Any(l => l.UserId == this.User.Identity.Name))
                                                        {
                                                            <button id="likebtn" class="btn btn-secondary" style="background:#137cdc">
                                                                <i class="fa fa-thumbs-up" style="font-size: 30px;"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button id="likebtn" class="btn btn-secondary">
                                                                <i class="fa fa-thumbs-up" style="font-size: 30px;"></i>
                                                            </button>
                                                        }
                                                    }
                                                    <span>Likes</span>
                                                    <span>@reply.Likes.Count()</span>
                                                </form>
                                                <form asp-controller="Comments" asp-action="Dislike" asp-route-id="@reply.Id" method="post">
                                                    @if (!this.User.Identity.IsAuthenticated)
                                                    {
                                                        <button type="button" class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" data-bs-content="You need to be authenticated to rate this.">
                                                            <i class="fa fa-thumbs-down" style="font-size: 30px;"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        if (reply.Dislikes.Any(d => d.UserId == this.User.Identity.Name))
                                                        {
                                                            <button id="dislikebtn" class="btn btn-secondary" style="background:#137cdc">
                                                                <i class="fa fa-thumbs-down" style="font-size: 30px;"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button id="dislikebtn" class="btn btn-secondary">
                                                                <i class="fa fa-thumbs-down" style="font-size: 30px;"></i>
                                                            </button>
                                                        }
                                                    }
                                                    <span>Dislikes</span>
                                                    <span>@reply.Dislikes.Count()</span>
                                                </form>
                                                <p>
                                                    <img src="~/icons/calendar.png" alt="Alternate Text" />
                                                    @if (reply.ModifiedOn == null)
                                                    {
                                                        <span>@reply.CreatedOn</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@reply.ModifiedOn</span>

                                                    }
                                                </p>
                                                <div class="row">
                                                    <article>
                                                        <div class="card-footer">
                                                            @if (reply.AuthorName == this.User.Identity.Name)
                                                            {
                                                                <form asp-controller="Comments" asp-action="Delete" asp-route-id="@reply.Id" method="post">
                                                                    <span>
                                                                        <button class="btn form-control" style="background:#ff0000;color:#ffffff">
                                                                            Delete Comment
                                                                        </button>
                                                                    </span>
                                                                </form>
                                                                <span>
                                                                    <a asp-controller="Comments" asp-action="Edit" class="btn btn-info" asp-route-id="@reply.Id">
                                                                        Edit
                                                                    </a>
                                                                </span>
                                                            }
                                                        </div>
                                                    </article>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                    
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <pre class="tab"></pre>
             }
         }
    </div>

    <button id="btn-scrollTop" onclick="getToTop()">
        <img src="~/icons/circle_up.png"  alt="Alternate Text" />
    </button>

